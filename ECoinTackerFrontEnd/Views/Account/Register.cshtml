@model ECoinTrackerModels.Requests.RegisterRequest
@{
	ViewData["Title"] = "Registracija";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-contoller="Account" asp-action="Register" method="POST" class="form-horizontal" role="form">

	<div class="text-center" style="padding-bottom: 30px">
		<h1>Registracija</h1>
	</div>
	
	@if (ViewBag.Error != null && ViewBag.Error)
	{
		<div class="text-center" style="padding-bottom: 10px">
			<h4 style="color: red;">Įvyko registravimo klaida, pabandykite dar kartą.</h4>
		</div>
	}

	<div class="row" style="padding-bottom: 10px">
		<div class="col-md-12 col-xs-12">
			<div class="input-group">
				<span class="input-group-addon glyphicon glyphicon-font"></span>
				<input asp-for="FullName" type="text" class="form-control" placeholder="Vardas, pavardė">
			</div>
		</div>
	</div>

	<div class="row" style="padding-bottom: 10px">
		<div class="col-md-12 col-xs-12">
			<div class="input-group">
				<span class="input-group-addon glyphicon glyphicon-user"></span>
				<input asp-for="Username" type="text" class="form-control" placeholder="Prisijungimo vardas">
			</div>
		</div>
	</div>

	<div class="row"  style="padding-bottom: 10px">
		<div class="col-md-12 col-xs-12">
			<div class="input-group">
				<span class="input-group-addon glyphicon glyphicon-lock"></span>
				<input asp-for="Password" id="password" type="password" class="form-control" placeholder="Slaptažodis" data-toggle="password">
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col-md-12 col-xs-12">
			<button type="submit" class="btn btn-success" style="width: 100%;">Registruotis</button>
		</div>
	</div>
</form>
